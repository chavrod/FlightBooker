<div class="flex flex-row">
  <div class="basis-1/3">
    <%= form_with url: flights_path, method: :get do |f| %>
      <div class="mb-3 xl:w-96">
        <%= f.label 'Origin' %>
        <%= f.select(:departure_id, options_for_select(@origin_options))%>
      </div>
      <div class="mb-3 xl:w-96">
        <%= f.label 'Destination' %>
        <%= f.select(:arrival_id, options_for_select(@destination_options))%> 
      </div>
      <div class="mb-3 xl:w-96">
        <%= f.label 'Date' %>
        <%= f.date_field(:date, placeholder: "dd/mm/yyyy") %>
      </div>
      <div class="mb-3 xl:w-96">
        <%= f.label 'Passengers' %>
        <%= f.select :number_of_passengers, [1, 2, 3, 4] %>
      </div>
        <%= f.submit "Find Flights" %>
    <% end %>
  </div>
  <div class="basis-2/3 flex justify-center">
    <ul class="bg-white rounded-lg border border-gray-200 w-96 text-gray-900">
      <% @available_flights.each do |flight| %>
        <li class="px-6 py-2 border-b border-gray-200 w-full">
          Departing from <%= flight.departure_airport.name %> to <%= flight.arrival_airport.name %> at <%= flight.takeoff %>
        </li>
      <% end %>
    </ul>
  </div>
</div>


